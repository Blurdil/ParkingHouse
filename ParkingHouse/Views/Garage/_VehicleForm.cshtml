    </div>
    <div>
        @Html.ValidationMessageFor(m => m.Fabricate)
    </div>
</div>

<div>
    <div>
        @Html.DisplayNameFor(m => m.FabricateModel)
    </div>
    <div>
        @Html.EditorFor(m => m.FabricateModel)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.FabricateModel)
    </div>
</div>

<div>
